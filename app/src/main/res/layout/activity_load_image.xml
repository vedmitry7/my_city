<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.LoadImageActivity">


    <Button
        android:onClick="uploadFromDevice"
        android:id="@+id/uploadImagefromDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="uploadImagefromDevice"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="147dp" />

    <Button
        android:onClick="uploadFromCamera"
        android:id="@+id/uploadImagefromcamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="uploadImagefromCamera"
        app:layout_constraintTop_toBottomOf="@+id/uploadImagefromDevice"
        tools:layout_editor_absoluteX="147dp" />
</android.support.constraint.ConstraintLayout>